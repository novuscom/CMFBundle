        <div class="box-header">
            <h4 class="box-title">Создание страницы</h4>
        </div>

        <div class="box-body">
            {{ form(form) }}
        </div>
        <div class="box-footer">
            <a class="btn btn-info"
               href="{{ path('cmf_admin_site_pages', {'site_id':app.request.get('site_id')}) }}">
