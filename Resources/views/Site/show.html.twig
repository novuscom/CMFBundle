{% extends 'NovuscomCMFBundle:Default:admin.html.twig' %}

{% block body -%}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Сайт &laquo;{{ entity.name }}&raquo;</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Алиасы</th>
                    <td>{% for alias in entity.aliases %}
                            <li>{{ alias.name|e }}</li>
                        {% endfor %}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            
            <a class="btn btn-info" href="{{ path('cmf_admin_site_list') }}">
                Список сайтов
            </a>
            <a class="btn btn-warning" href="{{ path('cmf_admin_site_edit', { 'id': entity.id }) }}">
                Редактировать сайт
            </a>

            <div class="pull-right">
                {{ form(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
