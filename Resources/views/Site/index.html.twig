{% extends 'NovuscomCMFBundle:Default:admin.html.twig' %}

{% block body -%}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Сайты</h3>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Название</th>
                    <th>Код</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('cmf_admin_site_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td><a
                               href="{{ path('cmf_admin_site_edit', { 'id': entity.id }) }}"><b>{{ entity.name }}</b></a></td>
                        <td>{{ entity.code }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="box-footer">
            <a class="btn btn-success" href="{{ path('cmf_admin_site_new') }}">
                <i class="glyphicon glyphicon-plus"></i> Создать сайт
            </a>
        </div>
    </div>


{% endblock %}
